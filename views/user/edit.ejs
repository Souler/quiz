<div class="row">
	<form method="post" action="/user/<%= user.id %>">
	  <input name="_method" type="hidden" value="PUT">
	  <div class="input-field col s12">
	    <i class="mdi-action-account-circle prefix"></i>
	    <input id="username" name="user[username]" type="text" class="validate" value="<%= user.username %>">
	    <label for="username">Nombre de usuario</label>
	  </div>
	  <div class="input-field col s12">
	    <i class="mdi-content-mail prefix"></i>
	    <input id="email" name="user[email]" type="email" class="validate" value="<%= user.email %>">
	    <label for="email">Email</label>
	  </div>
	  <div class="input-field col s12">
	    <i class="mdi-action-lock prefix"></i>
	    <input id="pass" name="user[password]" type="password" class="validate">
	    <label for="pass">Contrasena (dejar en blanco si no se desea cambiar)</label>
	  </div>
	  <button class="btn waves-effect waves-light" type="submit">
	  	<span>Confirmar cambios</span>
	    <i class="mdi-content-send right"></i>
	  </button>
	</form>
</div>
<div class="row">
	<form method="post" action="/user/<%= user.id %>" onsubmit="return confirm('Confirma que desea eliminar al usuario <%= user.username %>')">
	  <input name="_method" type="hidden" value="DELETE">
	  <button class="btn waves-effect waves-light" type="submit">
	  	<span>Elimar usuario</span>
	    <i class="mdi-action-delete right"></i>
	  </button>
	</form>
</div>